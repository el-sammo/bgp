<div 
	ng-controller="MessageController" 
	id="tt-messenger" 
	ng-cloak
>
  <alert 
  	type="{{alertType}}" 
  	ng-show="userMessage" 
  	close="close()"
  >
    <strong ng-show="title">
    	{{title}}&nbsp;
    </strong>
    {{userMessage}}
  </alert>
</div>

<div 
	class="App" 
	ng-cloak
>
	<div class="App-header">
		<div 
			class="col-md-8 col-md-offset-2 offset15"
		>
			<div 
				class="pull-right"
				ng-controller="LayoutController"
			>
				<span ng-show="activeCart">
					<span 
						class="login clickable topDepth" 
						ng-click="showOrder()"
					>
						View Cart({{cartItemsCount}} Items)
					</span>
				</span>
				<span ng-show="!accessAccount">
					Already Have an Account? 
					<span 
						class="login clickable topDepth" 
						ng-click="logIn()"
					>
						Log In
					</span> 
					Need an Account? 
					<span 
						class="login clickable topDepth" 
						ng-click="signUp()"
					>
						Create Account
					</span>
				</span>
				<span ng-show="accessAccount">
					<span 
						class="login clickable topDepth" 
						ng-click="showAccount()"
					>
						My Account
					</span> 
					<span 
						class="login clickable topDepth" 
						ng-click="logOut()"
					>
						Log Out
					</span>
				</span>
			</div>
		</div>
	</div>
	<div class="App-body">
		<div 
			class="App-diag-msg"
			ng-show="bigScreen"
		>
			<img 
				src="/images/new_flavors.png" 
				class="App-diag-msg" 
				alt="Check Out Our New Flavors!" 
			/>
		</div>
		<div class="col-md-8 col-md-offset-2">
			<div class="row">
				<div class="col-md-1 offsetNeg50 nearTopDepth">
					<span 
						class="clickable"
						id="logo"
					>
						<img 
							src="/images/logo_purple.png" 
							class="pull-left" 
							alt="Rebecca's Gourmet Popcorn" 
						/>
					</span>
				</div>
			</div>
			<div ng-view>
			</div>
		</div>
	</div>
</div>
		




<!-- Hack for ensuring event-based services are instantiated -->
<div ng-controller="LoadServices" style="display:none;" aria-hidden="true"></div>

